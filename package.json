{
  "name": "ts-express-server-typeorm",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "",
  "author": "",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config build/server.js",
    "build": "npm run build-ts",
    "watch": "yarn eslint && nodemon",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "start-ts": "ts-node -r dotenv/config ./src/server.ts",
    "eslint": "eslint . --ext .ts",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/config/rdbms.ts",
    "db:generate": "npm run typeorm:cli -- migration:generate -n",
    "db:run": "npm run typeorm:cli -- migration:run",
    "db:revert": "npm run typeorm:cli -- migration:revert",
    "debug": "node --nolazy --inspect-brk=9300 -r dotenv/config build/server.js"
  },
  "dependencies": {
    "@slack/client": "^5.0.2",
    "airtable": "^0.8.1",
    "aws-sdk": "^2.728.0",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^9.0.0",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "numeral": "^2.0.6",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25",
    "uuid": "^8.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/airtable": "^0.8.0",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^26.0.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.9.0",
    "@types/node": "12.0.0",
    "@types/numeral": "^0.0.28",
    "@types/pg": "^7.14.4",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.0.0",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "colors": "^1.4.0",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
